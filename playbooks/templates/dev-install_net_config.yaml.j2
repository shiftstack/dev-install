#vi:syntax=yaml
---
network_config:
{% if network_config is defined %}
{{ network_config | to_nice_yaml }}
{% else %}
- type: ovs_bridge
  name: br-ex
  use_dhcp: true
  mtu: {{ network_info.public_ipv4.mtu }}
  ovs_extra:
  - br-set-external-id br-ex bridge-id br-ex
  members:
  - type: interface
    name: {{ network_info.public_ipv4.interface }}
    primary: true
- type: ovs_bridge
  name: br-ctlplane
  use_dhcp: false
  mtu: 1500
  ovs_extra:
  - br-set-external-id br-ctlplane bridge-id br-ctlplane
  addresses:
  - ip_netmask: {{ local_ip }}/{{ control_plane_prefix }}
  members:
  - type: interface
    name: dummy0
    nm_controlled: true
- type: ovs_bridge
  name: br-hostonly
  use_dhcp: false
  mtu: 1500
  ovs_extra:
  - br-set-external-id br-hostonly bridge-id br-hostonly
  addresses:
  - ip_netmask: {{ hostonly_gateway }}/32
  routes:
  - destination: {{ hostonly_cidr }}
    nexthop: {{ hostonly_gateway }}
  members:
{% if sriov_interface is defined %}
  - type: sriov_pf
    name: {{ sriov_interface }}
    numvfs: {{ sriov_nic_numvfs | mandatory }}
    use_dhcp: false
    defroute: false
    nm_controlled: false
    hotplug: true
    promisc: false
{% else %}
  - type: interface
    name: dummy1
    nm_controlled: true
{% endif %}
{% endif %}
